{
  "version": 2,
  "builds": [
    { "src": "backend/server.js", "use": "@vercel/node" },
    { 
      "src": "package.json", 
      "use": "@vercel/static-build", 
      "config": { 
        "distDir": "build"
      } 
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/server.js" },
    { "source": "/socket.io", "destination": "/backend/server.js" },
    { "source": "/socket.io/(.*)", "destination": "/backend/server.js" },
    { "source": "/socket-check", "destination": "/backend/server.js" },
    { "source": "/health", "destination": "/backend/server.js" },
    { "source": "/current-port.txt", "destination": "/backend/server.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "env": {
    "CI": "false",
    "SKIP_PREFLIGHT_CHECK": "true",
    "NODE_ENV": "production",
    "VERCEL_ENV": "production"
  }
} 